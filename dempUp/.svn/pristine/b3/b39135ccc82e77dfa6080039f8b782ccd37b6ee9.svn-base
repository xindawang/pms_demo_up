<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0//EN">
<html>
<head>
<title>武器装备保障平台</title>
<meta charset="UTF-8">
<script type="text/javascript" src="/projmgt/js/common/env.js"></script>
<script type="text/javascript" src="/iw/js/org/core.js"></script>
<script type="text/javascript" src="/projmgt/js/common/simplePaginationEnv.js"></script>
<script type="text/javascript" src="/projmgt/js/plan/universal/createTask.js"></script>

</head>
<body>
	<div id="top" class="top"></div>

	<div id="left" class="left"></div>

	<div class="content">
		<div class="content-header">
			<ul class="breadcrumb">
				<li><span class="glyphicon glyphicon-home"></span> <a href="/iw/org/welcome.html">首页</a></li>
				<li class="split">&gt;</li>
				<li><a href="#">项目管理</a></li>
				<li class="split">&gt;</li>
				<li class="active">任务模板</li>
			</ul>
		</div>

		<div class="table-box">
			<div class="content-header">
				<span><button id="save" class="btn btn-primary">保存</button> <span style="margin-right: 2%"></span>
					<button id="cancel" class="btn btn-primary" onclick="location.href='planLib.html'">取消</button></span>
			</div>

			<form class="form-horizontal panel-body" id="uniTaskForm" method="post" role="form" style="height: 500px">
				<div class="container-fluid">

					<div class="row">
						<div class="row col-md-4" style="margin-left: 0px">
							<div class="form-group">
								<label class="col-md-3 control-label"><span style="color:red">*</span>名称</label>
								<div class="col-md-9 ">
									<input name="name" class="form-control" placeholder="任务名称" />
								</div>
							</div>
							<div class=" form-group">
								<label class="col-md-3 control-label"><span style="color:red">*</span>工期</label>
								<div class="col-md-9 ">
									<input name="duration" class="form-control" />
								</div>
							</div>
						</div>

						<div class="form-group col-md-7">
							<label class="col-md-2 control-label">说明</label>
							<div class="col-md-10 ">
								<textarea name="state" class="form-control" style="overflow-y: scroll; resize: none" rows="3"></textarea>
							</div>
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-1 control-label"><span style="color:red">*</span>优先级</label>
						<div class="col-md-3">
							<input name="priority" placeholder="0-99(数字越大优先级越高)" class="form-control"/>
						</div>
						<label class="col-md-1 control-label">完成形式</label>
						<div class="col-md-3">
							<input name="form" class="form-control" placeholder="任务完成形式" />
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-1 control-label"><span style="color:red">*</span>任务库</label>
						<div class="col-md-3">
							<select id="baseId" name="baseId" class="form-control">
							</select>
						</div>
						<div class="col-md-3 col-md-offset-1">
							<input id="milestone" name="" type="checkbox"/><label>里程碑任务</label>
						</div>
					</div>

				</div>
			</form>
		</div>

	</div>
</body>
</html>